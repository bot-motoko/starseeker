%h1= @user.username

%ul
  - grouped_events = @watch_events.group_by {|event| event['repo']['name'] }
  - sorted_grouped_events = grouped_events.sort_by {|repo_name, events| -events.count }
  - sorted_grouped_events.each do |repo_name, events|
    %li
      = link_to repo_name, github_url(repo_name)
      - events.each do |event|
        = link_to image_tag(gravatar_url(event['actor']['gravatar_id']), :size => '20x20'), event['actor']['url']
