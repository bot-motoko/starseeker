!!! html
%html
  %head
    %title Watchmen
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    %header
      %h1
        = link_to 'Watchmen', Settings.base_url
      %nav
        %ul
          - if logged_in?
            %li= link_to 'ranking', ranking_path
            %li= link_to 'dashboard', dashboard_path
            %li= link_to 'Logout', logout_path, method: :delete if logged_in?
          - else
            %li= link_to 'Sign in with GitHub', auth_at_provider_path(provider: :github)
      %p#notice= notice
      %p#alert= alert
    %section#content
      = yield

